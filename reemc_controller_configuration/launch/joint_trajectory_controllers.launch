<launch>
  <!-- Spawn whole-body joint trajectory controllers -->
  <node name="joint_trajectory_controllers_spawner"
        pkg="controller_manager" type="spawner" output="screen"
        args="left_leg_controller
              right_leg_controller
              torso_controller
              head_controller
              left_arm_controller
              right_arm_controller
              left_hand_controller
              right_hand_controller" />

  <!-- Point head action -->
  <group ns="head_controller">
    <node name="point_head_action" pkg="head_action" type="head_action" output="screen" >
      <rosparam>
        pan_link:  head_1_link
        tilt_link: head_2_link
        success_angle_threshold: 0.01
      </rosparam>
    </node>
  </group>

  <!-- Simple grasping action -->
  <node name="left_hand_grasping_action" pkg="simple_grasping_action" type="simple_grasping_action" output="screen">
    <param name="target_controller" value="left_hand_controller" />
  </node>

  <node name="right_hand_grasping_action" pkg="simple_grasping_action" type="simple_grasping_action" output="screen">
    <param name="target_controller" value="right_hand_controller" />
  </node>
</launch>
